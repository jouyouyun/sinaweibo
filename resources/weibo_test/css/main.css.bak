#title-pos {
    position:relative;
    color:#8e8e8e;
    width:690px;
    height:22px;
}

#close_button {
    float:right;
    width:21px;
    height:16px;
    background: url("../img/cancel_normal.png");
}

#close_button:hover {
    background: url("../img/cancel_hoverl.png");
}

#close_button:press {
    background: url("../img/cancel_press.png");
}

#board {
    /*position:fixed;*/
    bottom: 0px;
    width: 100%;
    min-height: 12px;
    max-height: 12px;
    z-index: -1000;
}

#container {
    position:fixed;
    bottom: 10px;
    /*display: -webkit-box;*/
    top: 10px;
}

#weibo-share {
    cursor: pointer;
}

#picture-pos {
    position:absolute;
    left:25px;
    margin-top:10px;
    box-shadow: 0 0 10px gray;
    /*background: rgba(100, 0, 0, 0.3);*/
}

#text-pos {
    background: rgba(100, 0, 0, 0.3);
    position:absolute;
    top:535px;
    left:25px;

    /*float:left;*/
}

#button-pos {
    background: rgba(0, 0, 100, 0.3);
    position:absolute;
    bottom:5px;
    right:30px;

    float:right;
}

#checkbox-pos {
    position:absolute;
    bottom:5px;
    left:20px;

    float:left;
}

